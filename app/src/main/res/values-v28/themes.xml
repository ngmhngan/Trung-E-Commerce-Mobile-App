<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_default" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:outlineSpotShadowColor">@color/colorPrimary</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">16dip</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:background">@drawable/button_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
</resources>