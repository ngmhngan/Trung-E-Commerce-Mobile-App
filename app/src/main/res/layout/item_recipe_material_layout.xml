<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imvRecipeMaterialBackground"
        android:layout_width="110dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/background_listproduct"
        />
    <TextView
        android:id="@+id/txtRecipeMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imvRecipeMaterialBackground"
        app:layout_constraintLeft_toLeftOf="@+id/imvRecipeMaterialBackground"
        app:layout_constraintRight_toRightOf="@+id/imvRecipeMaterialBackground"
        app:layout_constraintBottom_toBottomOf="@+id/imvRecipeMaterialBackground"
        android:text="Bột mì"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>