<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_image"
    android:outlineAmbientShadowColor="@color/colorShadow"
    android:outlineSpotShadowColor="@color/colorShadow"
    android:elevation="10dp"
    android:layout_margin="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imvRecipeThumb_ListRecipe"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/txtRecipeName_ListRecipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/colorText"
            android:text="Cách làm bánh Donut"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/imvLikeRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtRecipeLike_ListRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="500 người đã thích"
        android:fontFamily="@font/sfpro_regular"
        android:textColor="@color/colorSubText"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>