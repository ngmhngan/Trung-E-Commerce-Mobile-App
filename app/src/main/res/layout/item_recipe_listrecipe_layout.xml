<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="165dp"
        android:layout_height="165dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imvRecipeThumb_ListRecipe"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:scaleType="centerCrop"
            android:src="@drawable/suggest_monan" />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:weightSum="10"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtRecipeName_ListRecipe"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="9.5"
            android:fontFamily="@font/gilroy_bold"
            android:text="Cách làm bánh Donut"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/imv_recipe_like_ic_heart_listrecipe"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/ic_heart"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txtRecipeLike_ListRecipe"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="500 người đã thích"
        android:fontFamily="@font/sfpro_regular"
        android:textColor="@color/grey"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        android:textSize="12sp"/>

</LinearLayout>