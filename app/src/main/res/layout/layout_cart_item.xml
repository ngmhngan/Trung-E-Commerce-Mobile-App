<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_image"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="5dp"
    android:outlineSpotShadowColor="@color/colorSecondBackgroundShadow"
    android:outlineAmbientShadowColor="@color/colorSecondBackgroundShadow">

    <ImageView
        android:id="@+id/imv_lyCart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@color/colorSecondBackgroundShadow"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:id="@+id/txtSanPham_lyCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:id="@+id/txtAmount_lyCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Loading" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_decrease_lyCart"
            style="@style/btn_decrease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Button" />

        <TextView
            android:textSize="18sp"
            android:layout_width="30dp"
            android:id="@+id/txtQuantity_lyCart"
            android:minWidth="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/btn_increase_lyCart"
            style="@style/btn_increase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>