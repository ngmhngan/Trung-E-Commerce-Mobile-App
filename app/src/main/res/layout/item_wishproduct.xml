<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp">

    <ImageView
        android:id="@+id/imvProduct_Wish"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:scaleType="fitCenter"

        android:background="@color/colorSecondBackground">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName_WishP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:text="Tên nguyên liệu"
            android:textColor="@color/colorText"
            android:fontFamily="@font/gilroy_medium"

            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txtLike_WishP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:text="500 anh em đã thích"

            android:fontFamily="@font/sfpro_regular"
            android:textColor="@color/colorSubText"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPrice_WishP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="24000 đ"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/sfpro_bold"

                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/chkLike_WL"
                style="@style/checked_wish"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>