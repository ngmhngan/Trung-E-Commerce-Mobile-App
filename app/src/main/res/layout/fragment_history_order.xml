<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtDate_fragmentHistoryOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:clickable="true"
        android:fontFamily="@font/sfpro_medium"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Chọn ngày hiển thị:"
        android:textColor="@color/colorPrimary" />


    <ImageView
        android:id="@+id/imvSearchEmpty"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_empty_search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lv_fragmentHistoryOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

</LinearLayout>