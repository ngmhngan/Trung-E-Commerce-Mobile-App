<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_detail"
    android:background="#E5E5E5">


    <ImageView
        android:id="@+id/imgBack_productDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow_24" />

    <ImageView
        android:id="@+id/imgHeart__productDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_heart_line" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="408dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBack_productDetail"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgFood_productDetail"
                android:layout_width="368dp"
                android:layout_height="305dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cocoa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_white"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgFood_productDetail">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="900dp">

                    <TextView
                        android:id="@+id/txtTittle__productDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="tittle"
                        android:textColor="#3F414E"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtPrice_productDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="price"
                        android:textColor="#F58A42"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtTag_productDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_tag"
                        android:text="Tag"
                        app:layout_constraintStart_toStartOf="@+id/txtTittle__productDetail"
                        app:layout_constraintTop_toBottomOf="@+id/txtTittle__productDetail" />

                    <TextView
                        android:id="@+id/txtInfor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="Thông tin sản phẩm"
                        android:textColor="#3F414E"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTag_productDetail" />

                    <TextView
                        android:id="@+id/txtDescription1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="Cream of tartar thực chất là một nguyên liệu có dạng bột, chúng không phải là chất gây nở nhưng lại có tác dụng giúp cho quá trình nở của bánh tốt hơn. Cream of tartar có màu trắng và có độ mịn tốt, đây là sản phẩm được kết tinh trong quá trình lên men khi làm rượu"
                        android:textColor="#C5C0B7"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/txtInfor"
                        app:layout_constraintStart_toStartOf="@+id/txtInfor"
                        app:layout_constraintTop_toBottomOf="@+id/txtInfor" />

                    <TextView
                        android:id="@+id/txtDescription2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="Cream of tartar thực chất là một nguyên liệu có dạng bột, chúng không phải là chất gây nở nhưng lại có tác dụng giúp cho quá trình nở của bánh tốt hơn. Cream of tartar có màu trắng và có độ mịn tốt, đây là sản phẩm được kết tinh trong quá trình lên men khi làm rượu"
                        android:textColor="#C5C0B7"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/txtDescription1"
                        app:layout_constraintStart_toStartOf="@+id/txtDescription1"
                        app:layout_constraintTop_toBottomOf="@+id/txtDescription1" />

                    <TextView
                        android:id="@+id/txtChiTiet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="Thông tin chi tiết"
                        android:textColor="#3F414E"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtDescription2" />

                    <TextView
                        android:id="@+id/txtChiTiet_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="Cách bảo quản: đối với bột Cream of Tartar cũng giống như bột Baking Soda hay bột Baking Powder: Để trong hộp kín tại nơi thoáng mát, nếu mua số lượng lớn bạn có thể chia ra cất vào ngăn mát tủ lạnh, sẽ hạn chế được thời gian hỏng."
                        android:textColor="#C5C0B7"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/txtChiTiet"
                        app:layout_constraintStart_toStartOf="@+id/txtChiTiet"
                        app:layout_constraintTop_toBottomOf="@+id/txtChiTiet" />

                    <TextView
                        android:id="@+id/txtSanPham"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/sfpro_bold"
                        android:text="Sản phẩm liên quan"
                        android:textColor="#3F414E"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtChiTiet_text" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvSanPhamLienQuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@+id/txtSanPham"
                        app:layout_constraintStart_toEndOf="@+id/txtSanPham"
                        app:layout_constraintTop_toBottomOf="@+id/txtSanPham" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="@+id/rcvSanPhamLienQuan"
                        app:layout_constraintStart_toStartOf="@+id/rcvSanPhamLienQuan"
                        app:layout_constraintTop_toBottomOf="@+id/rcvSanPhamLienQuan">

                        <ImageButton
                            android:id="@+id/btn_minus"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/ic_minus_24"
                            />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sfpro_bold"
                            android:text="1"
                            android:textColor="#3F414E"
                            android:textSize="16sp"/>

                        <ImageButton
                            android:id="@+id/btn_plus"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/ic_plus_24" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!--    <RelativeLayout-->
    <!--        android:id="@+id/footer"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:background="#ffff00"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/scrollView3"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent">-->

    <Button
        android:id="@+id/btn_AddProduct_productDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_btn_addproduct"
        android:fontFamily="@font/sfpro_medium"
        android:text="Thêm vào giỏ hàng"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!--        </RelativeLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>